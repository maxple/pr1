{
    "name": "app",
    "version": "1.0.0",
    "description": "A sample React application",
    "main": "index.js",
    "scripts": {
        "lint": "eslint .",
        "start": "webpack-dev-server --mode development",
        "build": "webpack --mode production",
        "test": "jest",
        "posttest": "npm run lint",
        "coverage": "opener ./coverage/lcov-report/index.html"
    },
    "devDependencies": {
        "autoprefixer": "^9.1.2",
        "babel-core": "6.26.0",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^23.6.0",
        "babel-loader": "7.1.2",
        "babel-preset-env": "1.6.0",
        "babel-preset-react": "6.24.1",
        "babel-preset-stage-0": "6.24.1",
        "css-loader": "0.28.7",
        "deep-freeze": "0.0.1",
        "enzyme": "^3.7.0",
        "enzyme-adapter-react-16": "^1.7.0",
        "enzyme-to-json": "^3.3.4",
        "eslint": "^5.9.0",
        "eslint-plugin-react": "^7.11.1",
        "jest": "^23.6.0",
        "jest-css-modules": "^1.1.0",
        "node-sass": "4.5.3",
        "opener": "^1.4.3",
        "postcss-loader": "2.0.6",
        "react-addons-test-utils": "^15.6.2",
        "react-test-renderer": "^16.5.2",
        "redux-devtools-extension": "^2.13.5",
        "sass-loader": "6.0.6",
        "standard": "^12.0.1",
        "style-loader": "0.18.2",
        "webpack": "^4.17.1",
        "webpack-cli": "^3.1.0",
        "webpack-dev-server": "^3.1.5"
    },
    "dependencies": {
        "d3": "3.5.6",
        "events": "^3.0.0",
        "flux": "^3.1.3",
        "isomorphic-fetch": "^2.2.1",
        "prop-types": "15.6.0",
        "react": "16.0.0",
        "react-dom": "16.0.0",
        "react-icons": "^3.2.2",
        "react-redux": "^5.0.7",
        "react-router-dom": "^4.3.1",
        "redux": "^4.0.0",
        "uuid": "3.1.0"
    },
    "jest": {
        "setupFiles": [
            "./__tests__/shim.js",
            "./__tests__/global.js"
        ],
        "modulePathIgnorePatterns": [
            "shim.js",
            "global.js"
        ],
        "moduleNameMapper": {
            "\\.(scss)$": "<rootDir>/node_modules/jest-css-modules"
        },
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ],
        "verbose": true,
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 0,
                "functions": 0,
                "lines": 0,
                "statements": 0
            }
        }
    }
}
